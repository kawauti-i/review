<%= form_for(@post) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, 'コメント' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group">
    <%= f.label :画像 %>
    <%= f.file_field :img %>
  </div>
    <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
<% end %>