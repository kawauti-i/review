
<div class="row">
    <% posts.each do |post| %>
      <div class="post">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <div>
                <p><%= link_to post.title, post_path(post) %></p>
              </div>
              <div class="img">
                <% if post.img? %>
                  <%= image_tag post.img.url %>
                <% else %>
                  <%= image_tag "noimage.gif" %>
                <% end %>
              </div>
              <div>
                <p><%= link_to "コメントを見る", post_path(post) %></p>
              </div>
              <div class="panel-footer">
                <img class="media-object img-rounded" src="<%= gravatar_url(post.user, { size: 20 }) %>" alt="">
                <%= link_to post.user.name, user_path(post.user) %>
                <div class = "delete-btn">
                  <% if current_user == post.user %>
                    <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>